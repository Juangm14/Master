<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/drawables_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawables"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/custom_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/custom_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extensi칩n de vistas"
        app:layout_constraintTop_toBottomOf="@id/drawables_btn"
        app:layout_constraintBottom_toTopOf="@id/customEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/customEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Componentes compuestos"
        app:layout_constraintTop_toBottomOf="@id/custom_component"
        app:layout_constraintBottom_toTopOf="@id/customGrafica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/customGrafica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gr치fica personalizada"
        app:layout_constraintTop_toBottomOf="@id/customEditText"
        app:layout_constraintBottom_toTopOf="@id/custom_notificaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/custom_notificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        app:layout_constraintTop_toBottomOf="@id/customGrafica"
        app:layout_constraintBottom_toTopOf="@id/customNotifSnackbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/customNotifSnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones SnackBar"
        app:layout_constraintTop_toBottomOf="@id/custom_notificaciones"
        app:layout_constraintBottom_toTopOf="@id/notif_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/notif_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuadro de di치logo"
        app:layout_constraintTop_toBottomOf="@id/customNotifSnackbar"
        app:layout_constraintBottom_toTopOf="@id/barraEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/barraEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barra de estado"
        app:layout_constraintTop_toBottomOf="@id/notif_dialog"
        app:layout_constraintBottom_toTopOf="@id/pantallaTactil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/pantallaTactil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantalla t치ctil"
        app:layout_constraintTop_toBottomOf="@id/barraEstado"
        app:layout_constraintBottom_toTopOf="@id/estilos_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/estilos_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estilos Main"
        app:layout_constraintTop_toBottomOf="@id/pantallaTactil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
